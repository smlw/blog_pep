<% include ../layout/header.ejs %>

<div class="main">
  <div class="container">
    <div class="content">


      <div class="post">
        <div class="top">
          <h2>
            <%=post.title %>
          </h2>
        </div>
        <div class="body">
          <p>
            <%=post.body%>
          </p>
        </div>
        <div class="bottom">
          <div class="author">
            Автор:
            <a href="/users/<%=post.owner.login%>">
              <%=post.owner.login%></a>
          </div>
        </div>
      </div>

      <div class="comments" id="<%=post.id%>">
        <h3>Комментарии</h3>
        <div class="comment-list">
          <%- include('../layout/comments.ejs', {items: comments}) %>

          <form class="comment">
            <textarea name="body"></textarea>
            <div class="buttons">
              <button class="cancel secondary" type="clear">Отмена</button>
              <button class="send" type="submit">Добавить</button>
            </div>
          </form>
        </div>
      </div>


    </div>
    <% include ../layout/sidebar.ejs %>
  </div>
</div>


  <% include ../layout/footer.ejs %>